<header class="masthead text-center text-white ">
    <h1 class='text-center'>Editar Concurso</h1>

    <%= form_with(model: @concurso) do |form| %>
      <div class="form-group row">
      <%= form.label :'Nombre', class:"col-sm-2 col-form-label" %><br />
      <div class="col-sm-8">
        <%= form.text_field :nombre , class: "form-control"%>
        </div>
        </div>

        <div class="form-group row">
        <%= form.label :Imagen , class:"col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">
        <%= image_tag @concurso.image_url , class: "form-control"%>
        </div>
        </div>

        <div class="form-group row">
        <%= form.label :'URL' , class:"col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">
        <%= form.text_area :url , class: "form-control"%>
        </div>
        </div>

        <div class="form-group row">
        <%= form.label :'Fecha Inicio', class:"col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">
        <%= form.date_select(:fechainicio, order: [:day, :month, :year]) %>
        </div>
        </div>

        <div class="form-group row">
        <%= form.label :'Fecha Fin' , class:"col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">
        <%= form.date_select(:fechafin, order: [:day, :month, :year]) %>
        </div>
        </div>

        <div class="form-group row">
        <%= form.label :'Valor a pagar' , class:"col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">
        <%= form.text_field :valorpagar , class: "form-control"%>
        </div>
        </div>

        <div class="form-group row">
        <%= form.label :'Texto' , class:"col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">
        <%= form.text_area :texto , class: "form-control"%>
        </div>
        </div>

        <div class="form-group row">
        <%= form.label :'Recomendaciones', class:"col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">
        <%= form.text_area :recomendaciones , class: "form-control" %>
        </div>
        </div>

        <div class="col-sm">
            <%= form.submit "Actualizar", class: "btn btn-primary" %>
        </div>
    <% end %>
    <%= link_to 'Volver', concursos_path %>
</header>