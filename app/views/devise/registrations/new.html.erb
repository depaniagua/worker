<header class="masthead text-center text-white">
<h1 class='text-center'>Registrarse</h1>
<div class='container'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
          <%= f.label :name, class: "col-sm-2 col-form-label" %><br />
            <div class="col-sm-8">      
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
      </div>
            
      <div class="form-group row">
        <%= f.label :lastname, class: "col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">      
        <%= f.text_field :lastname, class: "form-control" %>
        </div>
        </div>
        
        <div class="form-group row">    
        <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">      
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
          </div>
          
          <div class="form-group row">    
          <%= f.label :password, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-8">      
          <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
        </div>
        
        <div class="form-group row">    
        <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %><br />
        <div class="col-sm-8">      
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
        </div>
        
        <div class="col text-center">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>        
  </div>
</header>